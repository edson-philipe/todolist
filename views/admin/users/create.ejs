<%- include('../../partils/header') %>
    <%- include('../../partils/navbar') %>
        <div class="container-fluid">
            <div class="card mt-3">
                <div class="card-header">
                    <h2 class="my-1 fs-6">Cadastrar usuário</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-3 mb-2">
                            <form action="/admin/users/save" method="POST">
                                <label for="nome" class="form-label mb-0">Nome:</label>
                                <input type="text" class="form-control form-control-sm" id="nome" name="nome"
                                    placeholder="Insira o nome do usuário">
                        </div>
                        <div class="col-12 col-md-3 mb-2">
                            <label for="email" class="form-label mb-0">Email:</label>
                            <input type="email" class="form-control form-control-sm" id="email" name="email"
                                placeholder="Digite o email do usuário">
                        </div>
                        <div class="col-12 col-md-3 mb-2">
                            <label for="senha" class="form-label mb-0">Senha:</label>
                            <input type="password" id="senha" name="senha" class="form-control form-control-sm"
                                placeholder="Indique a senha do usuário">
                        </div>
                        <div class="col-12 col-md-3 mb-2">
                            <label for="hierarquia" class="form-label mb-0">Hierarquia:</label>
                            <select class="form-select form-select-sm" aria-label="Default select example"
                                name="hierarquia">
                                <option value="adm">Administrador</option>
                                <option value="usuario">Usuário</option>
                                <option value="cliente">Cliente</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <button type="submit" class="btn btn-success btn-sm">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
        <%- include('../../partils/footer') %>