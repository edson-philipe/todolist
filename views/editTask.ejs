<%- include('partils/header') %>
<%- include('partils/navbar') %>

<div class="container">

    <div class="card">
        <div class="card-header">
            Editar informações da tarefa selecionada
        </div>

        <div class="card-body">
            <form action="/edittaskconfirm" method="POST">

                <div class="mb-3">
                    <label for="inputEditTitleTask" class="form-label">Título da tarefa:</label>
                    <input type="text" class="form-control" id="inputEditTitleTask" name="titulo" value="<%= tarefa.titulo %>">
                </div>

                <div class="mb-3">
                    <label for="inputEditDescriptionTask" class="form-label">Descrição da tarefa:</label>
                    <textarea class="form-control" id="inputEditDescriptionTask" rows="3" name="descricao"><%= tarefa.descricao %></textarea>
                </div>

            </div>

            <div class="card-footer text-muted">
                <a href="/task/<%= tarefa.id %>" class="btn btn-outline-secondary btn-sm">Cancelar</a>
                <input type="hidden" value="<%= tarefa.id %>" name="id">
                <input type="submit" class="btn btn-success btn-sm" value="Confirmar edições">
            </div>
        </form>
    </div>
</div>

<%- include('partils/footer') %>