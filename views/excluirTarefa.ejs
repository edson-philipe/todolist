<%- include('partils/header') %>
<%- include('partils/navbar') %>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                   Excluir tarefa
                </h5>
                <p class="card-text">
                    Deseja realmente excluir a tarefa selecionada?
                </p>
            </div>
            <div class="card-footer text-muted">
                <form action="/excluirtarefa" method="POST">
                    <a href="/tarefa/<%= tarefa.id %>" class="btn btn-outline-secondary">Cancelar exclusão</a>
                    <input type="hidden" value="<%= tarefa.id %>" name="id">
                    <input type="submit" class="btn btn-success" value="Confirmar exclusão">
                </form>
            </div>
        </div>
    </div>
<%- include('partils/footer') %>